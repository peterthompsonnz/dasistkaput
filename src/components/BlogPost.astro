---
export interface Props {
  title: string;
  author: string;
  publishDate: string;
  heroImage: string;
}

const { title, author, publishDate, heroImage, alt } = Astro.props;
---

<article class="post-content__article">
    {heroImage && <img width="720" height="420" class="post-main__img" loading="lazy" src={heroImage} alt={alt} />}
    <h1>{title}</h1>
    <time>{publishDate}</time>
    <slot />
</article>

<style>
  .post-main__img {
    width: 100%;
    height: auto;
  }
</style>

